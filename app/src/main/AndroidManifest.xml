<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.loopeer.codereader"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.loopeer.codereader.CodeReaderApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeReader">

        <activity
            android:name="com.loopeer.codereader.ui.activity.MainActivity"
            android:theme="@style/Theme.CodeReader.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.loopeer.codereader.ui.activity.CodeReadActivity"
            android:label="@string/title_activity_code_read"
            android:theme="@style/Theme.CodeReader.NoActionBar"/>

        <activity android:name="com.loopeer.directorychooser.DirectoryFileChooserActivity"/>
    </application>

</manifest>